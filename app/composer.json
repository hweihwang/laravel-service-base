{
    "name": "hweihwang/laravel-serive-base",
    "type": "project",
    "description": "Laravel Service Base",
    "keywords": ["laravel", "service", "cqrs", "ddd"],
    "authors": [
        {
            "name": "Hoang Pham",
            "email": "hoangmaths96@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=8.2.2",
        "ext-pdo": "*",
        "doctrine/dbal": ">=3.5.3",
        "ecotone/laravel": ">=1.72.0",
        "guzzlehttp/guzzle": ">=7.5.0",
        "hweihwang/elasticsearch-scout-driver": "dev-master",
        "laravel/framework": ">=v9.50.2",
        "laravel/octane": ">=v1.4.0",
        "laravel/scout": ">=v9.8.0",
        "laravel/telescope": ">=v4.13.0",
        "php-open-source-saver/jwt-auth": ">=2.0.0",
        "webmozart/assert": ">=1.11.0"
    },
    "require-dev": {
        "fakerphp/faker": ">=1.21.0",
        "laravel/pint": ">=v0.2.4",
        "mockery/mockery": ">=1.5.1",
        "nunomaduro/collision": ">=v6.4.0",
        "nunomaduro/phpinsights": ">=2.7.0",
        "phpunit/phpunit": ">=10.0.4",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "Frameworks\\": "src/Frameworks/",
            "Modules\\": "src/Modules/",
            "Database\\Seeders\\": "src/Frameworks/Laravel/Database/Seeders/",
            "Tests\\": "src/Tests/"
        }
    },
    "autoload-dev": {
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
